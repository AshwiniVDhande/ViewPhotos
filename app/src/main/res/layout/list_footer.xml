<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/value_80">

    <ProgressBar
        android:id="@+id/footerProgressBar"
        style="?android:attr/progressBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:indeterminate="true"
        android:indeterminateTint="@color/colorPrimaryOrange"
        android:indeterminateTintMode="src_atop"
        android:visibility="gone"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/footerEndText"
        style="@style/dimen_ww"
        android:layout_centerInParent="true"
        android:text="@string/end_of_the_list"
        android:textColor="@color/colorBlack_a38"
        android:textSize="@dimen/size_12"
        android:visibility="visible"/>
</RelativeLayout>